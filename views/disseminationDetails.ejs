<!DOCTYPE html>
<html>
  <head>
    <title>Dissemination Details</title>
    <% include ./partials/css%>
  </head>
<body>
    <%- include('partials/navbar', {admin:admin}) %>
    <div class="content-form">
        <h2>Dissemination Details</h2>
        <div class="form-group">
          <label for="exampleFormControlInput1">Headline</label>
          <input type="text" class="form-control" name="headline" value="<%= dissemination.headline %>" readonly>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Summary</label>
          <input type="text" class="form-control" name="summary" rows="3" value="<%= dissemination.summary %>" readonly>
        </div>
        <div class="row">
          <div class="col">
              <div class="form-group">
                <label for="exampleFormControlSelect1">Date Published</label>
                <input type="text" class="form-control" name="date" rows="1" value="<%= dissemination.date.toDateString() %>" readonly>
              </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="exampleFormControlSelect1">PR/NEWS</label>
              <input type="text" class="form-control" name="pr_news" rows="1" value="<%= dissemination.pr_news %>" readonly>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">URL</label>
          <input type="text" class="form-control" name="url" rows="1" value="<%= dissemination.url %>" readonly>
        </div>
      <a style="float: left; padding: 10px; width:20%; margin: 10px; width:30%" href="/disseminations/delete/<%= dissemination.id %>" class="btn btn-danger btn-lg">Delete</a>
      <a style="float: right; padding: 10px; width:20%; margin: 10px; width:30%" href="/disseminations/edit/<%= dissemination.id %>"  class="btn btn-info btn-lg">Edit</a>
  </div>
  <% include ./partials/scripts%>
</body>
</html>
