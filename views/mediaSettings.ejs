<!DOCTYPE html>
<html>
  <head>
    <title>Media Settings</title>
    <% include ./partials/css%>
  </head>
<body>
<%- include('partials/navbar', {admin:admin}) %>
  <div class="content">

    <div class="row">
      <h2 style="float: left;"><%= title %></h2>
    </div>
    <div class="row row-title">
      <div class="col"> <h3 style="float: left;">Media Types</h3> </div>
      <div class="col"> <a style="float: right;" href="/publications/add" class="btn btn-info">Add Media Type</a> </div>
    </div>
    
    <table class="table table-striped table-bordered table-responsive-lg" id="impacts-table">
      <thead>
        <tr>
          <th scope="col">Contents</th>
          <th class="no-sort" scope="col" style="text-align:center">Publications</th>
          <th class="no-sort" scope="col" style="text-align:center">Actions</th>
        </tr>
      </thead>
      <tbody>
          <% for(var i=0; i<mediaTypes.length; i++) {%>
          <tr>
              <td><%= mediaTypes[i].type %></td>
              <td style="text-align: center"><a class="fas fa-list" href="" ></a></td>
              <td style="text-align: center"><a class="fas fa-trash-alt" style="color:red;" href="" ></a></td>
          </tr>
          <% } %>
      </tbody>
    </table>

    <div class="row row-title">
      <div class="col"><h3 style="float: left;">Medias</h3></div>
      <div class="col"><a style="float: right;" href="/media/add" class="btn btn-info">Add Media</a></div>
    </div>

    <div class="row">
      <table class="table table-striped table-bordered table-responsive-lg" id="impacts-table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Content</th>
            <th scope="col">Coverage</th>
            <th scope="col">Format</th>
            <th class="no-sort" scope="col" style="text-align:center">Publications</th>
            <th class="no-sort" scope="col" style="text-align:center">URL</th>
            <th class="no-sort" scope="col" style="text-align:center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<medias.length; i++) {%>
            <tr>
                <td><%= medias[i].name %></td>
                <td><%= medias[i].type %></td>
                <td><%= medias[i].content %></td>
                <td><%= medias[i].coverage %></td>
                <td><%= medias[i].format %></td>
                <td style="text-align: center"><a class="fas fa-list" href="" ></a></td>
                <td style="text-align: center"><a class="fas fa-external-link-alt" href="<%= medias[i].url %>" target="_blank"></a></td>
                <td style="text-align: center"><a class="fas fa-trash-alt" style="color:red;" href="" ></a></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <% include ./partials/scripts%>
  <% include ./partials/datatablesScripts%>
</body>
</html>
