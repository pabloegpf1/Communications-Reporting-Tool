<!DOCTYPE html>
<html>
  <head>
    <title>New Publication</title>
    <% include ./partials/css%>
  </head>
<body>
    <% include ./partials/navbar%>
    <form class="publication-form" action="/publications/add" method="post">
      <h2>New Publication</h2>
      <div class="form-group">
        <label for="exampleFormControlInput1">Headline</label>
        <input type="text" class="form-control" name="headline">
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Summary</label>
        <textarea class="form-control" name="summary" rows="3"></textarea>
      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="exampleFormControlSelect1">Media (<a href='/medias/add'>Add new</a>)</label>
            <select class="form-control" name="media">
              <% for(var i=0; i<medias.length; i++) {%>
                <option value="<%= medias[i].id %>"><%= medias[i].name %></option>
              <% }%>
            </select>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="exampleFormControlInput1">Media Section (Optional)</label>
            <input type="text" class="form-control" name="media_section">
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Spokesperson</label>
        <input type="text" class="form-control" name="spokesperson">
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Comments (Optional)</label>
        <textarea class="form-control" name="comments" rows="2"></textarea>
      </div>
      <div class="row" style="padding:10px">
        <div class="col">
          <div class="form-group">
              <label for="exampleFormControlSelect1">Language</label>
              <select class="form-control" name="language">
                <option value="spanish">Spanish</option>
                <option value="english">English</option>
                <option value="french">French</option>
                <option value="german">German</option>
                <option value="italian">Italian</option>
                <option value="russian">Russian</option>
                <option value="greek">Greek</option>
                <option value="chinese">Chinese</option>
                <option value="japanese">Japanese</option>
                <option value="arabic">Arabic</option>
                <option value="other">Other</option>
              </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
              <label for="exampleFormControlSelect1">Date Published</label>
              <input type="date" class="form-control" name="date">
            </div>
        </div>
      </div>
      <div class="row" style="padding:10px">
          <div class="col-sm-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="published">
              <label class="form-check-label form-check-label" for="defaultCheck1">Published</label>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="has_video">
              <label class="form-check-label" for="defaultCheck1">
                Has video
              </label>
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="statements">
              <label class="form-check-label" for="defaultCheck1">
                Statements
              </label>
            </div>
          </div>
        <div class="col-sm-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="true" name="proactivity">
            <label class="form-check-label" for="defaultCheck1">
                Proactivity
            </label>
          </div>
        </div>
      </div>
      <div class="row" style="padding:10px">
        <div class="col-sm-4">
            <div class="form-group">
              <select class="form-control" name="publication_type">
                <option selected value="0">Type of publication</option>
                <% for(var i=0; i<types.length; i++) {%>
                  <option value="<%= types[i].id %>"><%= types[i].type %></option>
                <% }%>
              </select>
            </div>
          </div>
        <div class="col-sm-4">
          <div class="form-group">
            <select class="form-control" name="pr_news">
              <option value="pr">PR</option>
              <option value="news">News</option>
            </select>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <select class="form-control" name="photo_count">
              <option selected value="0">Number of photos</option>
              <option value="0">none</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="2">3</option>
              <option value="2">4</option>
              <option value="2">5</option>
              <option value="2">>5</option>
            </select>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-7">
          <div class="form-group">
            <label for="exampleFormControlInput1">Original URL</label>
            <input type="text" class="form-control" name="url">
          </div>
        </div>
        <div class="col-sm-5">
          <div class="form-group">
            <label for="exampleFormControlInput1">Shortened URL</label>
            <input type="text" class="form-control" name="shortened_url">
          </div>
        </div>
    </div>
    <button type="submit"class="btn btn-success btn-lg" style="float: right; padding: 10px; margin: 10px;">Create Publication</a>
  </form>
  <% include ./partials/scripts%>
</body>
</html>
