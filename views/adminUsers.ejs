<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <% include ./partials/css%>
</head>
<body>
    <%- include('partials/navbar', {admin:admin}) %>
    <div class="content">
      <div class="publication-table">
        <div class="row row-title">
          <div class="col">
              <h2 style="float: left;"><%= title %></h2>
          </div>
          <div class="col">
              <a style="float: right;" href="/admin/add-user" class="btn btn-info">Add User</a>
          </div>
        </div>
          <table class="table table-striped table-bordered table-responsive-lg" id="publications-table">
              <thead>
                <tr>
                  <th scope="col" onclick="sortTable(0,false)">First name</th>
                  <th scope="col" onclick="sortTable(1,false)">Last Name</th>
                  <th scope="col" onclick="sortTable(2,false)">Username</th>
                  <th scope="col" style="text-align:center">Contributions</th>
                  <th scope="col" style="text-align:center" >Actions</th>
                </tr>
              </thead>
              <tbody>
                  <% for(var i=0; i<users.length; i++) {%>
                  <tr>
                      <td><%= users[i].first_name %></td>
                      <td><%= users[i].last_name %></td>
                      <td><%= users[i].username %></td>
                      <td style="text-align: center"><a class="fas fa-list" href="contributions/<%= users[i].id %>" ></a></td>
                      <td style="text-align: center">
                        <div class="row">
                          <div class="col">
                          <% if(users[i].admin == true){ %>
                            <a class="fas fa-user-cog" style="color:green;" href="change-status/<%= users[i].id %>" ></a>
                          <%}else{%>
                            <a class="fas fa-user-cog" style="color:orange;" href="change-status/<%= users[i].id %>" ></a>
                          <%}%>
                          </div>
                          <div class="col">
                              <a class="fas fa-trash-alt" style="color:red;" href="delete-user/<%= users[i].id %>" ></a>
                          </div>
                        </div>
                      </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
      </div>
    </div>
    <% include ./partials/sortingScript%>
    <% include ./partials/scripts%>
</body>
</html>