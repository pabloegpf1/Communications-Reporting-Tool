<!DOCTYPE html>
<html>
	<head>
		<title>SM Share Details</title>
		<% include ./partials/css%>
	</head>
	<body>
		<%- include('partials/navbar', {admin:admin}) %>
		<div class="content-form">
			<h2>SM Share Details</h2>
			<div class="form-group">
				<label for="exampleFormControlInput1">Headline</label>
				<input type="text" class="form-control" name="headline" value="<%= share.headline %>" readonly />
			</div>
			<div class="form-group">
				<label for="exampleFormControlInput1">Message</label>
				<textarea type="text" class="form-control" name="spokesperson" rows="2" readonly /><%= share.message %></textarea>
			</div>
			<div class="form-group">
				<label for="exampleFormControlInput1">Comments</label>
				<textarea class="form-control" name="comments" rows="2" readonly><%= share.comments %></textarea>
			</div>
			<div class="row">
				<div class="col">
					<div class="form-group">
						<label for="exampleFormControlSelect1">Language</label>
						<input type="text" class="form-control" name="Language" rows="1" value="<%= share.language %>" readonly />
					</div>
				</div>
				<div class="col">
					<div class="form-group">
						<label for="exampleFormControlSelect1">Date</label>
						<input type="text" class="form-control" name="date" rows="1" value="<%= share.date.toDateString() %>" readonly />
					</div>
				</div>
			</div>
			<div class="row" style="margin-bottom:30px; margin-top:30px;">
				<div class="col">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" value="true" name="uploaded" disabled="disabled"  <% if (share.uploaded){ %> checked <% } %> >
						<label class="form-check-label form-check-label" for="defaultCheck1">Uploaded</label>
					</div>
				</div>
				<div class="col">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" value="true" name="has_video" disabled="disabled" <% if (share.has_video){ %> checked <% } %> >
						<label class="form-check-label" for="defaultCheck1">
							Has video
						</label>
					</div>
				</div>
				<div class="col">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" value="true" name="proactivity" disabled="disabled" <% if (share.proactivity){ %> checked <% } %> >
						<label class="form-check-label" for="defaultCheck1">
							Proactivity
						</label>
					</div>
				</div>
			</div>
			<h3 style="margin-top: 30px">Dissemination</h3>
			<div class="form-group">
				<label for="exampleFormControlSelect1">Dissemination Headline</label>
				<input type="text" class="form-control" name="dissemination_title" rows="1" value="<%= share.dissemination_headline %>" readonly />
			</div>
			<div class="row">
				<div class="col">
					<div class="form-group">
						<label for="exampleFormControlInput1">Summary</label>
						<input type="text" class="form-control" name="summary" rows="3" value="<%= share.summary %>" readonly />
					</div>
				</div>
				<div class="col">
					<div class="form-group">
						<label for="exampleFormControlSelect1">PR/NEWS</label>
						<input type="text" class="form-control" name="pr_news" rows="1" value="<%= share.pr_news %>" readonly />
					</div>
				</div>
			</div>
			<h3 style="margin-top: 30px">Social Media</h3>
			<div class="form-group">
				<label for="exampleFormControlSelect1">Social Media</label>
				<input type="text" class="form-control" name="media_name" rows="1" value="<%= share.social_media %>" readonly />
			</div>
			<div class="row">
				<div class="col">
					<div class="form-group">
						<label for="exampleFormControlSelect1">Social Media Account</label>
						<input type="text" class="form-control" name="share_type" rows="1" value="<%= share.social_media_account %>" readonly />
					</div>
				</div>
				<div class="col">
					<div class="form-group">
						<label for="exampleFormControlSelect1">Photos</label>
						<input type="text" class="form-control" name="photo_count" rows="1" value="<%= share.photo_count %>" readonly />
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="form-group">
						<label for="exampleFormControlInput1">Original URL</label>
						<input type="text" class="form-control" name="url" rows="1" value="<%= share.source_url %>" readonly />
					</div>
				</div>
				<div class="col">
					<div class="form-group">
						<label for="exampleFormControlInput1">Video URL</label>
						<input type="text" class="form-control" name="shortened_url" rows="1" value="<%= share.video_url %>" readonly />
					</div>
				</div>
			</div>
			<a style="float: left; padding: 10px; width:20%; margin: 10px; width:30%" href="/sm-shares/delete/<%= share.id %>" class="btn btn-danger btn-lg">Delete</a>
			<a style="float: right; padding: 10px; width:20%; margin: 10px; width:30%" href="/sm-shares/edit/<%= share.id %>" class="btn btn-info btn-lg">Edit</a>
		</div>
		<% include ./partials/scripts%>
	</body>
</html>
