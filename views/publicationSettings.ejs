<!DOCTYPE html>
<html>
  <head>
    <title>User Info</title>
    <% include ./partials/css%>
  </head>
<body>
    <%- include('partials/navbar', {admin:admin}) %>
    <div class="content">
      <div class="row">
        <h2 style="float: left;"><%= title %></h2>
      </div>
      <div class="row row-title">
        <div class="col">
          <h3 style="float: left;">Publication Types</h3>
        </div>
        <div class="col">
          <a style="float: right;" href="/publications/add" class="btn btn-info">Add Publication Type</a>
        </div>
      </div>
      <div class="row">
        <table class="table table-striped table-bordered table-responsive-lg" id="publications-table">
          <thead>
            <tr>
              <th scope="col" onclick="sortTable('publications-table',0,false)">Type</th>
              <th scope="col" style="text-align:center">Publications</th>
              <th scope="col" style="text-align:center">Actions</th>
            </tr>
          </thead>
          <tbody>
              <% for(var i=0; i<publicationTypes.length; i++) {%>
              <tr>
                <td><%= publicationTypes[i].type %></td>
                <td style="text-align: center"><a class="fas fa-list" href="/publications/type/<%= publicationTypes[i].id %>" ></a></td>
                <td style="text-align: center"><a class="fas fa-trash-alt" style="color:red;" href="/publications/delete-type/<%= publicationTypes[i].id %>" ></a></td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
      </div>
    <% include ./partials/scripts%>
    <% include ./partials/sortingScript%>
</body>
</html>
