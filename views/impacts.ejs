<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <% include ./partials/css%>
</head>
<body>
    <%- include('partials/navbar', {admin:admin}) %>
    <div class="content">
      <div class="impacts-table">
        <div class="row row-title">
          <div class="col">
              <h2 style="float: left;"><%= title %></h2>
          </div>
          <div class="col">
              <a style="float: right;" href="/impacts/add" class="btn btn-info">New Impact</a>
          </div>
        </div>
          <table class="table table-striped table-bordered table-responsive-lg" id="impacts-table">
              <thead>
                <tr>
                  <th width="35%" scope="col" onclick="sortTable('impacts-table',0,false)">Headline</th>
                  <th width="15%" scope="col" onclick="sortTable('impacts-table',1,false)">Media</th>
                  <th width="10%" scope="col" onclick="sortTable('impacts-table',2,false)">Type</th>
                  <th width="20%" scope="col" onclick="sortTable('impacts-table',3,false)">Summary</th>
                  <th width="15%" scope="col" onclick="sortTable('impacts-table',4,true)">Date</th>
                  <th width="5%" scope="col">Link</th>
                </tr>
              </thead>
              <tbody>
                  <% for(var i=0; i<impacts.length; i++) {%>
                  <tr>
                      <td style="text-overflow: ellipsis;white-space: nowrap;overflow: hidden;"><a href="/impacts/<%= impacts[i].id %>"><%= impacts[i].headline %></a></td>
                      <td><%= impacts[i].media_name %></td>
                      <td><%= impacts[i].type %></td>
                      <td><%= impacts[i].summary %></td>
                      <td><%= impacts[i].date.toDateString() %></td>
                      <td style="text-align: center"><a class="fas fa-external-link-alt" href="<%= impacts[i].url %>" target="_blank" ></a></td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
      </div>
    </div>
    <% include ./partials/sortingScript%>
    <% include ./partials/scripts%>
</body>
</html>