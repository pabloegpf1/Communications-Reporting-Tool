<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <% include ./partials/css%>
</head>
<body>
    <%- include('partials/navbar', {admin:admin}) %>
    <div class="content">
      <div class="impacts-table">
        <div class="row row-title">
          <div class="col">
              <h2 style="float: left;"><%= title %></h2>
          </div>
          <div class="col">
              <a style="float: right;" href="/impacts/add" class="btn btn-info">New Impact</a>
          </div>
        </div>
          <table class="table table-striped table-bordered table-responsive-lg" id="impacts-table">
              <thead>
                <tr>
                  <th width="33%" scope="col">Headline</th>
                  <th width="15%" scope="col">Media</th>
                  <th width="15%" scope="col">Type</th>
                  <th width="20%" scope="col">Summary</th>
                  <th width="10%" scope="col">Date</th>
                  <th class="no-sort" width="7%" scope="col">Link</th>
                </tr>
              </thead>
              <tbody>
                  <% for(var i=0; i<impacts.length; i++) {%>
                  <tr>
                      <td style="text-overflow: ellipsis;white-space: nowrap;overflow: hidden;">
                        <a href="/impacts/<%= impacts[i].id %>"><%= impacts[i].headline %></a>
                      </td>
                      <td><%= impacts[i].media_name %></td>
                      <td><%= impacts[i].type %></td>
                      <td><%= impacts[i].summary %></td>
                      <td><%= impacts[i].date.toLocaleDateString() %></td>
                      <td style="text-align: center"><a class="fas fa-external-link-alt" href="<%= impacts[i].url %>" target="_blank" ></a></td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
      </div>
    </div>
    <% include ./partials/scripts%>
    <% include ./partials/datatablesScripts%>
</body>
</html>