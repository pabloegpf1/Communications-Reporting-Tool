<!DOCTYPE html>
<html>
<head>
    <title>Publications</title>
    <% include ./partials/css%>
</head>
<body>
    <% include ./partials/navbar%>
    <div class="publication-table">
        <h2 style="float: left;">Latest Publications</h2>
        <a style="float: right;" href="/publications/add" class="btn btn-success">New Publication</a>
        <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Headline</th>
                <th scope="col">Media</th>
                <th scope="col">Type</th>
                <th scope="col">Summary</th>
                <th scope="col">Date</th>
                <th scope="col">Link</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<publications.length; i++) {%>
                <tr>
                    <td><a href="/publications/id/<%= publications[i].id %>"><%= publications[i].headline %></a></td>
                    <td><%= publications[i].name %></td>
                    <td><%= publications[i].type %></td>
                    <td><%= publications[i].summary %></td>
                    <td><%= publications[i].date.toDateString() %></td>
                    <td><a href="<%= publications[i].url %>"><%= publications[i].url %></a></td>
                </tr>
                <% } %>
            </tbody>
          </table>
    </div>
    <% include ./partials/scripts%>
</body>
</html>